                 if (cmd[0] == WRITE_STR)        // ansi string
                    if (cmdi == CMDLenMAX)      // max length exceeded
                        serout(NAK) ;
                        cs := 0 ;
                        cmdi := 0 ;
                    else if (cmdi > 2)
